{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "./build",
        "lib": [
            "dom",
            "es6"
        ],
        "strictNullChecks": true,
        "jsx": "react"
    },
    "exclude": [
        "./node_modules"
    ]
}